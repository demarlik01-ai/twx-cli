{
  "name": "twx-cli",
  "version": "0.1.0",
  "description": "A fast, lightweight CLI for the X (Twitter) API v2",
  "type": "module",
  "bin": {
    "twx": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsup src/cli.ts --format esm --dts --clean",
    "lint": "tsc --noEmit"
  },
  "keywords": ["twitter", "x", "cli", "api", "tweet", "post"],
  "author": "Hs Kim",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyoseo/twx-cli"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "commander": "^13.0.0",
    "oauth-1.0a": "^2.2.6",
    "chalk": "^5.4.0",
    "dotenv": "^16.4.0"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "tsx": "^4.19.0",
    "tsup": "^8.3.0",
    "@types/node": "^22.0.0",
    "@types/oauth": "^0.9.6"
  }
}
